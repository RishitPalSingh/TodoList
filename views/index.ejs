<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
  <meta charset="utf-8">
  <title>To Do List</title>
  <link rel="stylesheet" type="text/css" href="styles/main.css">
</head>
<body>

  <div class="box" id="heading">
    <h1>
      <%= listTitle %>
    </h1>
  </div>

  <div class="box">
    <% listItems.forEach(function (items){ %>
      <form action="/delete" method="post"> 
        <div class="item">
        <input type="checkbox" name="checkbox" value="<%= items._id %>" onChange="this.form.submit()">
        <p>
          <%= items.name %>
        </p>
      </div>
      <input type="hidden" name="listName" value=<%= listTitle %>>
    </form>
   
    <% }); %>

    <form class="item" action="/" method="post">
      <input type="text" name="newTodo" placeholder="New Item" autocomplete="off">
      <button type="submit" name="listSubmit" value=<%= listTitle %>>+</button>
    </form>
  </div>

</body>

<footer>
    
  </footer>

  </html>